# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET      /                          Welcome.index
# Accounts page
GET    /signup                      Accounts.signup
GET    /login                       Accounts.login
GET    /logout                      Accounts.logout
POST   /authenticate                Accounts.authenticate
POST   /register                    Accounts.register

# Donation page
GET    /donation                    DonationController.index
POST   /donation/donate             DonationController.donate
POST   /donation/selectCandidate    DonationController.selectCandidate

# Report page
GET    /donation/report             Report.index
POST   /donation/filterCandidates   Report.filterCandidates
POST   /donation/filterDonors       Report.filterDonors
POST   /donation/filterStates       Report.filterStates

# Edit Profile page
GET   /editprofile				          EditProfile.index					
POST  /editprofile/edit				      EditProfile.edit

# Candidate
GET  /candidate                     CandidateController.index
GET  /candidate/register            CandidateController.index
POST /candidate/register            CandidateController.register  

# Administrator                     
GET  /administrator                Administrator.index
GET  /administrator/report         Administrator.report
POST /administrator/login          Administrator.authenticate
GET  /administrator/logout         Administrator.logout

# Donor Location
GET /donorlocation                 DonorLocation.index
GET /donorlocation/geolocations    DonorLocation.listGeolocations

# Office
GET /office                        OfficeController.index
POST /office/create                OfficeController.register

# Ignore favicon requests
GET     /favicon.ico                            404


# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
